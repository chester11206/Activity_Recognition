<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/multisensors_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <!-- TODO: Update blank fragment layout -->
        <!--<TextView-->
        <!--android:id="@+id/txt_label"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/multisensorsbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start" />
            <Button
                android:id="@+id/uploadbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload" />
            <Button
                android:id="@+id/stopUploadbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Upload" />
        </LinearLayout>
        <TextView
            android:id="@+id/multisensorstxView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:textSize="17dp"
            android:paddingLeft="10dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/display"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/activity_vertical_margin">
                <RadioButton
                    android:id="@+id/chkstill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_textSize"
                    android:text="Still" />
                <RadioButton
                    android:id="@+id/chkwalking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_textSize"
                    android:text="Walking" />
                <RadioButton
                    android:id="@+id/chkrunning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_textSize"
                    android:text="Running" />
                <RadioButton
                    android:id="@+id/chkbiking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_textSize"
                    android:text="Biking" />
                <RadioButton
                    android:id="@+id/chkin_vehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_textSize"
                    android:text="In Vehicle" />
                <RadioButton
                    android:id="@+id/chktilting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activity_textSize"
                    android:text="Tilting" />
            </RadioGroup>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/sensors_display"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin">
                <!--<TextView-->
                <!--android:id="@+id/txViewtest1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:scrollbars="vertical"-->
                <!--android:textSize="15dp"-->
                <!--android:text="Test2"/>-->
                <!--<TextView-->
                <!--android:id="@+id/txViewtest2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:scrollbars="vertical"-->
                <!--android:textSize="15dp"-->
                <!--android:text="Test1"/>-->
            </LinearLayout>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/predictbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Predict" />
            <Button
                android:id="@+id/stopPredictbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Predict" />
        </LinearLayout>
        <TextView
            android:id="@+id/predict_txView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:textSize="17dp"
            android:paddingLeft="10dp"/>
    </LinearLayout>

</ScrollView>
